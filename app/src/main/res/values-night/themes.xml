<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZeroOneTechTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent</item> <!-- Using the accent color as the primary color -->
        <item name="colorPrimaryVariant">@color/navigation</item> <!-- Using the navigation color as the primary variant -->
        <item name="colorOnPrimary">@color/white</item> <!-- Text color on primary background -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background</item> <!-- Using the background color as the secondary color -->
        <item name="colorSecondaryVariant">@color/navigation</item> <!-- Using the navigation color as the secondary variant -->
        <item name="colorOnSecondary">@color/black</item> <!-- Text color on secondary background -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item> <!-- Using primary variant color for status bar -->

        <!-- Customize your theme here. -->
    </style>>
</resources>